{
  "version": "2.0.0",
  "tasks": [{
    "group": {"isDefault": true, "kind": "build"},
    "isBackground": true,
    "label": "TypeScript",
    "option": "watch",
    "problemMatcher": ["$tsc-watch"],
    "tsconfig": "tsconfig.workspaces.json",
    "type": "typescript"
  }, {
    "dependsOn": ["TypeScript"],
    "isBackground": true,
    "label": "Webpack",
    "script": "webpack:serve",
    "type": "npm",
    "problemMatcher": [{
      "background": {
        "activeOnStart": true,
        "beginsPattern": ".",
        "endsPattern": "compiled (with|successfully)"
      },
      "pattern": [{
        "regexp": ".",
        "file": 1,
        "location": 2,
        "message": 3
      }]      
    }]
  }]
}
